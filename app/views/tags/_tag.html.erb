<div class="tag">
  <% if user_signed_in? && event.organizer.id == current_user.id %>
    <%= link_to "<span></span>".html_safe,
      remove_event_tag_path(event, tag), method: :delete, remote: true,
      class: "remove", title: "remove" %>
  <% end %>
  <%= link_to tag.name, search_events_path(q: tag.name) %>
</div>