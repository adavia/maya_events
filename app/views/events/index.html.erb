<header>
  <h1>Events</h1>
  <ul class="actions">
    <li>
      <%= link_to "New Event", new_event_path, class: "new" %>
    </li>
  </ul>
</header>

<div id="events">
  <% @events.each do |event| %>
    <h2><%= link_to event.title, event %></h2>
    <p><%= event.description %></p>
  <% end %>
</div>